<!DOCTYPE html>

<head>
	<title>Course</title>

	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<% render 'layouts/shim' %>
</head>

<body class="body_map" >
	<div id="map" class="map" ></div>

	<div class="panel">
		<%= link_to "Home", root_path %>
		<%= link_to "All courses", courses_path %>
		<%= link_to "Create course", create_path %>
		<div class="dropdown">
			<button onclick="dropdown()" class="dropbtn" style="float:center;" >Menu</button>
	  		<div id="myDropdown" class="dropdown-content">
	  			<% if logged_in? %>
					<li><%= link_to "Profile", current_u %></li>
					<li><%= link_to "Settings", edit_user_path(current_u) %></li>
					<li><%= link_to "Log out", logout_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "Log in", login_path %></li>
				<% end %>
	  		</div>
		</div>
		<div id="timerdiv">
			<div id="hours1_ele">0</div>
			<div id="hours2_ele">0</div>
			<div id="minutes1_ele">0</div>
			<div id="minutes2_ele">0</div>
			<div id="seconds1_ele">0</div>
			<div id="seconds2_ele">0</div>			
		</div>
		<button onclick="startTimer()">Start</button>
		<button onclick="clearTimer()">Clear</button>
	</div>

</body>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDD4iRh-e5YvN2Ip9Xfda7wqLB6mGizxQ" onload="coords(<%= @coords %>)" async defer>
</script>


<%= debug(params) if Rails.env.development? %>
