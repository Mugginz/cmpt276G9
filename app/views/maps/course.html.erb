<!DOCTYPE html>

<head>
	<title>Course</title>

	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<% render 'layouts/shim' %>
</head>

<body class="body_map" >

	<div id="map" class="map" ></div>

	<div class="container" >
			<div class="btn-group" role="group" >
				<div style="float:left;">
				<%= button_to "Home",  root_path, :method => :get , class: "btn btn-primary" %> </div>
				<div style="float:left;">
 				<%= button_to "All courses",  courses_path, :method => :get , class: "btn btn-primary" %></div>
			  
			  <% if logged_in? %>
			  <div style="float:left;">
			   	 <%= button_to "Profile",  current_u, :method => :get, class: "btn btn-primary" %></div>
			   	 <div style="float:left;">
				<%= button_to "Create Course", create_path, :method => :get, class: "btn btn-primary" %></div>
			    <% else %>
			    <div style="float:left;">
			  	 <%= button_to "Log in", login_path, :method => :get , class: "btn btn-primary" %></div>
			    <% end %>
			</div>



  <div  style=" display: inline-block;">
	<!-- search bar -->
    <form class="search" method="post" action="">
      <input type="search" name="q" placeholder="Search a course here..." autocomplete="on">
      <ul class="search-ac">
		<%= render 'searchItems' %>
      </ul>
    </form>

	</div>
	
	
			<div id="timerdiv">
			<div id="hours1_ele">0</div>
			<div id="hours2_ele">0</div>
			<div id="minutes1_ele">0</div>
			<div id="minutes2_ele">0</div>
			<div id="seconds1_ele">0</div>
			<div id="seconds2_ele">0</div>
		</div>

		<button id="startButton" onclick="timerMode()">Start</button>
<!--		<button id="pauseButton" onclick="startTimer()">Start Timer</button> -->
		<button id="resetButton" onclick="resetTimer()" disabled="true">Reset</button>

	</div>
<hr>
</body>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDD4iRh-e5YvN2Ip9Xfda7wqLB6mGizxQ" onload="coords('<%= @na %>',<%= @coords %>)" async defer>
</script>


