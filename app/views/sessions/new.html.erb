<%= provide(:title, 'Login') %>

<h2>Log in</h2>

<div class="login">
	<%= form_for(:session, url: login_path) do |f| %>
		<!-- %= render 'shared/error_messages' % -->

    	<%= f.label :email %>
     	<%= f.email_field :email, class: 'form-control' %>

      	<%= f.label :password %>
      	<%= f.password_field :password, class: 'form-control' %>
    
    	<%= f.submit "Log in", class: "btn" %>
    <% end %>
</div>