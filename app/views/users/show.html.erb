<% provide(:title, @u.name) %>

<div class="profile_container" style="margin:0 0 0 0;">
	<aside class="user_identity">
		<h2>
			<%= avatar_for @u %>
			<%= @u.name %>
		</h2>
	</aside>
	
	<div class="user_profile">
		<p> Name: <%=@u.name %> </p>
		<p>Routes Completed:</p>
		<table class="courses_completed">
			<tr>
				<th>Course</th>
				<th>Completed</th>
				<th>Reset?</th>
			</tr>
			<% @p.each do |p| %>
			<tr>
				<td><%= link_to @courses.find_by_name(p.name).name, @courses.find_by_name(p.name) %></td>
				<td><% if p.complete %>yes<% else %>no<% end %></td>
				<td><%= link_to "delete save", p, :method => :get %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>

