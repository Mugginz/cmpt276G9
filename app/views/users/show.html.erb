<% provide(:title, @u.name) %>

<div class="container">
	<aside class="user_identity">
		<h2 style="color: #e6e6e8">
			<%= avatar_for @u %>
			<%= @u.name %>
		</h2>
		<%= link_to "Edit Profile", edit_user_path(current_u), :class => "btn" %>
		<%= link_to "All Users", users_path, :class => "btn" %>
	</aside>

	<div class="user_profile">

		<p>Routes Completed:</p>
		<table class="col-xs-4 col-md-offset-4 form_style">
			<tr>
				<th>Course</th>
				<th>Completed</th>
				<th>Reset?</th>
			</tr>
			<% @p.each do |p| %>
			<tr>
				<td><%= link_to @courses.find_by_name(p.name).name, @courses.find_by_name(p.name) %></td>
				<td><% if p.complete %>yes<% else %>no<% end %></td>
				<td><%= link_to "delete save", p, :method => :get %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
